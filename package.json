{
  "name": "@morpho-org/sdks",
  "version": "1.0.0",
  "description": "Collection of SDKs to interact with Morpho",
  "repository": "git@github.com:morpho-org/sdks.git",
  "author": "Morpho Association <contact@morpho.org>",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">=18"
  },
  "packageManager": "yarn@4.3.1",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "postinstall": "husky install",
    "lint": "eslint && prettier --check .",
    "lint:fix": "eslint --fix && prettier -w .",
    "gen": "yarn workspace @morpho-org/generator gen",
    "commit": "yarn gen commit",
    "publish": "lerna publish from-package"
  },
  "devDependencies": {
    "@lerna-lite/cli": "3.5.1",
    "@lerna-lite/publish": "3.5.1",
    "@trivago/prettier-plugin-sort-imports": "^4.2.0",
    "@types/node": "^20.12.8",
    "@typescript-eslint/eslint-plugin": "^7.12.0",
    "@typescript-eslint/parser": "^7.12.0",
    "eslint": "^8.46.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-address": "^0.0.2",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-unused-imports": "^3.2.0",
    "husky": "^9.0.11",
    "prettier": "^2.7.1",
    "typescript": "^5.4.5"
  },
  "prettier": {
    "tabWidth": 2,
    "printWidth": 120,
    "singleQuote": false,
    "importOrder": [
      "^react.*",
      "^(?![@\\.]).*",
      "^@(?!morpho|/).*",
      "^@morpho.*",
      "^@",
      "^\\.\\.",
      "^\\."
    ],
    "importOrderSeparation": true,
    "importOrderParserPlugins": [
      "typescript",
      "jsx",
      "decorators-legacy"
    ],
    "plugins": [
      "@trivago/prettier-plugin-sort-imports"
    ]
  }
}
